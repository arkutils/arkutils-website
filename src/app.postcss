a {
	@apply text-primary;
}
a:hover {
	@apply text-primary-focus;
}

h1 {
	@apply text-primary font-bold text-3xl;
}

h2 {
	@apply text-primary font-bold capitalize text-xl;
}

h3 {
	@apply text-primary font-bold capitalize text-base;
}

:focus {
	@apply outline-solid-primary/50;
}

code {
	@apply font-mono text-secondary;
}
