/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

a {
    @apply text-primary;
}
a:hover {
    @apply text-[color-mix(in_oklab,oklch(var(--p)),black_7%)];
}

h1 {
    @apply text-primary font-bold text-3xl;
}

h2 {
    @apply text-primary font-bold text-xl;
}

h3 {
    @apply text-primary font-bold text-base;
}

:focus {
    @apply outline-secondary/70;
}

code {
    @apply font-mono text-secondary;
}
