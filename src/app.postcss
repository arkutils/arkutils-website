/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

a {
	@apply text-primary;
}
a:hover {
	@apply text-primary-focus;
}

h1 {
	@apply text-primary font-bold text-3xl;
}

h2 {
	@apply text-primary font-bold text-xl;
}

h3 {
	@apply text-primary font-bold text-base;
}

:focus {
	@apply outline-primary/50;
}

code {
	@apply font-mono text-secondary;
}
